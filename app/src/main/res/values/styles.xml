<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
        <!-- Customize your theme here. -->
    </style>

    <style name="ProgressBar" parent="android:Theme.Holo.Light.NoActionBar.Fullscreen">
    </style>

    <!-- Default styles -->

    <style name="MatchParentWrapContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContentMatchParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchParentWrapContent.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchParentWrapContent.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchParent.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MatchParent.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WrapContent.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WrapContent.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WrapContentMatchParent.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WrapContentMatchParent.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="HorizontalStretchable">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="FullHorizontalStretchable">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="VerticalStretchable">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="FullVerticalStretchable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>


    <!-- Common styles -->

    <style name="TopRightCornerIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">@dimen/layout_margin</item>
    </style>

</resources>
