<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AdapterPlaceListBackground" parent="MatchParent">
        <item name="android:alpha">0.5</item>
        <item name="android:background">@color/yellow</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AdapterPlaceList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
    </style>

    <style name="AdapterPlaceListName" parent="WrapContent">
        <item name="android:paddingLeft">@dimen/layout_margin</item>
        <item name="android:paddingRight">@dimen/layout_margin</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/headline</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AdapterPlaceListFooterBlock" parent="HorizontalStretchable">
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/layout_margin</item>
    </style>

    <style name="AdapterPlaceListDetailsIcon">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
    </style>

    <style name="AdapterPlaceListDetailsLabel" parent="WrapContent">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>

        <item name="android:textSize">@dimen/body</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>