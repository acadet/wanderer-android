<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    style="@style/AdapterPlaceList"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <ImageView
        android:id="@+id/adapter_place_list_background"
        style="@style/AdapterPlaceListBackground"
        />

    <TextView
        android:id="@+id/adapter_place_list_name"
        android:layout_centerInParent="true"
        style="@style/AdapterPlaceListName"
        tools:text="Name"
        />

    <LinearLayout
        android:layout_alignParentBottom="true"
        style="@style/MatchParentWrapContent.Horizontal"
        >

        <LinearLayout
            android:gravity="center|left"
            style="@style/AdapterPlaceListFooterBlock"
            >

            <ImageView
                android:src="@drawable/ic_calendar"
                style="@style/AdapterPlaceListDetailsIcon"
                />

            <TextView
                android:id="@+id/adapter_place_list_date"
                style="@style/AdapterPlaceListDetailsLabel"
                tools:text="Mar 2016"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/adapter_place_list_like"
            android:gravity="center"
            android:visibility="gone"
            style="@style/AdapterPlaceListFooterBlock"
            >

            <ImageView
                android:src="@drawable/ic_liked"
                style="@style/AdapterPlaceListDetailsIcon"
                />

        </LinearLayout>

        <LinearLayout
            android:gravity="center|right"
            style="@style/AdapterPlaceListFooterBlock"
            >

            <TextView
                android:id="@+id/adapter_place_list_country"
                style="@style/AdapterPlaceListDetailsLabel"
                tools:text="USA"
                />

            <ImageView
                android:src="@drawable/ic_marker"
                style="@style/AdapterPlaceListDetailsIcon"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>